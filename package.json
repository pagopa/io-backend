{
  "name": "italia-backend",
  "version": "0.4.1",
  "description": "Italia app and web backend",
  "main": "index.js",
  "engines": {
    "node": "8.9.4"
  },
  "scripts": {
    "prepare": "patch-package",
    "build": "tsc",
    "build-noemit": "tsc --noEmit",
    "hot-reload": "nodemon src/server.js",
    "lint": "tslint -p . -c tslint.json -t verbose",
    "lint-autofix": "tslint -p . -c tslint.json -t verbose --fix",
    "prettify": "prettier --write \"./**/*.ts\"",
    "test": "jest -i",
    "start": "node src/server.js",
    "generate:proxy-models": "npm-run-all generate:proxy:* generate:api:*",
    "generate:proxy:api-models": "gen-api-models --api-spec api_proxy.yaml --no-strict --out-dir src/types/api --request-types",
    "generate:proxy:notification-models": "gen-api-models --api-spec api_notifications.yaml --no-strict --out-dir src/types/api",
    "generate:proxy:pagopa-models": "gen-api-models --api-spec api_pagopa.yaml --no-strict --out-dir src/types/api",
    "generate:proxy:public-models": "gen-api-models --api-spec api_public.yaml --no-strict --out-dir src/types/api",
    "generate:api:pagopaproxy": "rimraf src/types/api/pagopa-proxy && mkdir -p src/types/api/pagopa-proxy && gen-api-models --api-spec https://raw.githubusercontent.com/teamdigitale/italia-pagopa-proxy/v0.8.6/api_pagopa.yaml --no-strict --out-dir src/types/api/pagopa-proxy --request-types",
    "generate:test-certs": "./scripts/generate-test-certs.sh certs",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teamdigitale/italia-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/teamdigitale/italia-backend/issues"
  },
  "homepage": "https://github.com/teamdigitale/italia-backend#readme",
  "dependencies": {
    "awilix": "^3.0.9",
    "azure-sb": "^0.10.6",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.2",
    "express-enforces-ssl": "1.1.0",
    "helmet": "3.13.0",
    "io-ts": "^1.3.0",
    "io-ts-types": "^0.3.14",
    "italia-ts-commons": "^2.14.0",
    "json-set-map": "^1.0.2",
    "morgan": "^1.9.1",
    "node-fetch": "^2.2.0",
    "passport": "^0.4.0",
    "passport-auth-token": "^1.0.1",
    "passport-http-bearer": "^1.0.1",
    "passport-strategy": "^1.0.0",
    "patch-package": "^5.1.1",
    "range_check": "^1.4.0",
    "redis": "^2.8.0",
    "redis-clustr": "^1.6.0",
    "request-ip": "^2.1.1",
    "spid-passport": "git://github.com/gunzip/spid-passport.git#681554025efd2",
    "typescript": "^3.0.3",
    "ulid": "^2.2.2",
    "validator": "^10.8.0",
    "winston": "^3.0.0",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@types/azure-sb": "^0.0.32",
    "@types/dotenv": "^4.0.2",
    "@types/express": "4.16.0",
    "@types/express-enforces-ssl": "^1.1.1",
    "@types/glob": "^5.0.35",
    "@types/helmet": "^0.0.41",
    "@types/jest": "^23.3.3",
    "@types/lolex": "2.1.3",
    "@types/morgan": "^1.7.35",
    "@types/node-fetch": "^2.1.2",
    "@types/passport": "^0.4.6",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/passport-strategy": "^0.2.35",
    "@types/redis": "^2.8.5",
    "@types/request-ip": "^0.0.33",
    "@types/superagent": "^3.8.4",
    "@types/supertest": "^2.0.6",
    "@types/swagger-parser": "^4.0.2",
    "@types/validator": "^9.4.2",
    "@types/xml2js": "^0.4.3",
    "@types/xmldom": "^0.1.29",
    "danger": "^4.0.2",
    "danger-plugin-digitalcitizenship": "^0.3.1",
    "fp-ts": "^1.14.2",
    "italia-tslint-rules": "^0.1.1",
    "italia-utils": "^3.14.14",
    "jest": "^23.6.0",
    "lolex": "2.7.5",
    "mock-redis-client": "^0.91.13",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "superagent": "^3.8.3",
    "supertest": "^3.3.0",
    "swagger-cli": "^2.1.0",
    "swagger-parser": "^5.0.5",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-immutable": "^4.7.0",
    "tslint-language-service": "^0.9.9",
    "tslint-plugin-prettier": "^2.0.0",
    "tslint-sonarts": "^1.7.0",
    "typestrict": "^1.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!src/clients/api/*.{ts}",
      "!src/clients/api/models/*.{ts}",
      "!src/clients/pagopa/*.{ts}",
      "!src/clients/pagopa/models/*.{ts}",
      "!src/types/api/*.{ts}",
      "!src/**/*.d.ts"
    ]
  }
}
